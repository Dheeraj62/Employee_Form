@using System.Data

@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}
<h1>Employee Details</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Employee DOB</th>
            <th>Employee DOJ</th>
            <th>Employee Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["EmpId"]</td>
                <td>@row["EmpName"]</td>
                <td>@Convert.ToDateTime(row["EmpDOB"]).ToString("dd-MM-yyyy hh:mm:ss tt")</td>
                <td>@Convert.ToDateTime(row["EmpDOJ"]).ToString("dd-MM-yyyy hh:mm:ss tt")</td>
                <td>@Convert.ToDecimal(row["EmpSalary"]).ToString("0.00")</td>

                <td>
                    <a href="@Url.Action("Edit", new { id = @row["EmpID"] })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = @row["EmpID"] })" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
